<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".weishiyuan.Home_PageFragment">
    <RelativeLayout

        android:id="@+id/hot_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F84E4E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="首页"
            android:textColor="#FFFAFA"
            android:textSize="20sp" />




    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout

        android:id="@+id/HP_dl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <android.support.design.widget.TabLayout
                    android:id="@+id/HpTab"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    app:tabIndicatorColor="#006611"
                    app:tabSelectedTextColor="#006611"
                    app:tabTextColor="#006611"
                    >

                </android.support.design.widget.TabLayout>

                <!--<ImageView-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:id="@+id/imageView"-->
                    <!--&lt;!&ndash;android:layout_gravity="right"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:src="@mipmap/abc_ic_go_search_api_holo_light"&ndash;&gt;-->
                    <!--/>-->


            </FrameLayout>

            <android.support.v4.view.ViewPager

                android:id="@+id/HP_Vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.v4.view.ViewPager>









        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>



</LinearLayout>
