<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.twogroup.biggift.main.activity.MyinformationActivity">

    <RelativeLayout

        android:id="@+id/ziliao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F84E4E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="我的资料"
            android:textColor="#FFFAFA"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="18dp"
            android:src="@mipmap/abc_ic_ab_back_holo_dark"

            />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/ziliao"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#53d2cfcb" />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="更换头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/changeImage"
            android:layout_width="wrap_content"
            android:src="@mipmap/ig_profile_photo_default"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_chevron" />
    </RelativeLayout>
    <View
        android:id="@+id/vi"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/morenmingzi"
            android:layout_width="wrap_content"
            android:text="默认名字"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_chevron" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/bangdingshouji"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#53d2cfcb" />
    <View
        android:id="@+id/vi2"
        android:layout_below="@+id/rl2"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/bangdingshouji"
        android:layout_width="match_parent"
        android:text="绑定手机"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:layout_below="@id/vi2"/>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_below="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/tuichudenglu"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/dneglu"
            android:text="退出登录"
            android:textColor="#FFF"

            />
    </RelativeLayout>



</RelativeLayout>
