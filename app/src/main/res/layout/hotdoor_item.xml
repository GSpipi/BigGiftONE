<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/hot_item"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_load_image" />

    <RelativeLayout
        android:layout_width="175dp"
        android:layout_height="87dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:id="@+id/ivAttention"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_hotdoor_grayheart"
                android:layout_alignBottom="@+id/tvAttention"
                android:layout_toLeftOf="@+id/tvAttention"
                android:layout_toStartOf="@+id/tvAttention" />

            <TextView
                android:id="@+id/tvAttention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_alignTop="@+id/tvPrice"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp" />
    </RelativeLayout>
</LinearLayout>
